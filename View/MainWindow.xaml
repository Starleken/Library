<Window x:Class="SchoolLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolLearn"
        mc:Ignorable="d"
        Title="Список книг" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="Images/Books.jpg" Margin="0,5,0,0"/>

        <Grid Grid.Row="1" Background="WhiteSmoke">
            <StackPanel>
                <Button Content="Все книги" FontSize="31" Name="BooksButton"/>
                <Button Content="Полученные книги" FontSize="31" Name="GivenBooksButton"/>
                <Button Content="Отданные книги" FontSize="31" Name="ReceivedBooksButton"/>
            </StackPanel>
        </Grid>
        
        <Frame Name="FrameShower" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="Список всех книг" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="60"/>
    </Grid>
</Window>
